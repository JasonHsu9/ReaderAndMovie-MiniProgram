/* pages/welcome/welcome.wxss */

page {  
  height: 100%; /* 可以省略 */
  background-color: #b3d4db;
}

.container {
  display: flex;/* flex　会以组件为基本单位进弹性布局 */
  flex-direction: column;
  align-items: center;  /* 设置三个组件水平方向上居中 */
}

/* 猫眼头像样式 */
.user-avator { 
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;/* 头像顶部空间 */
}
/*  这里image 的 wxss 的单位一定要用rpx 相对像素单位  */

.user-name {
  margin-top: 100rpx;/* 设置三个组件间的--相同高度空间 */
  font-size: 32rpx;
  font-weight: bold;
  color: #405f80;
}

/* 开启观影之旅 框框效果 */
.moto-container {
  margin-top: 100rpx;  /* 设置三个组件间的--相同高度空间 */
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px; /* 设置圆角矩形 */
  text-align: center;/* 矩形容器内的文本垂直居中 */
}

/* 开启观影之旅 */
.moto {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx; /* 设置line-height 为容器的高度可以让文本垂直居中 */
  color: #405f80;
}
